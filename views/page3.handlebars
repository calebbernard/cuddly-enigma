        var coordinates = [osu, statue, canyon];
        var pos = coordinates[(Math.floor(Math.random()*coordinates.length))];
        var panorama = new google.maps.StreetViewPanorama(
          document.getElementById('map'), {
            position: pos,
            pov: {
              heading: 34,
              pitch: 10
            }
        });
        document.getElementById("coordinates").innerHTML = pos.lat;
        document.getElementById("coordinates").innerHTML += pos.lng;
    }
</script>

